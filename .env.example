# NovaPress AI v2 - Environment Variables Template
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Core Configuration
# =============================================================================

# JWT Secret Key (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-this-in-production

# OpenRouter API Key for LLM (https://openrouter.ai)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key

# LLM Model - Options:
# - deepseek/deepseek-v3.2 (RECOMMENDED - best reasoning, cheap output $0.38/M)
# - google/gemini-2.5-flash-lite-preview-09-2025 (ultra-fast, cheapest $0.10/M input)
# - x-ai/grok-4.1-fast (2M context, agents)
# - anthropic/claude-3.5-sonnet (premium quality ~$3/M)
OPENROUTER_MODEL=deepseek/deepseek-v3.2

# =============================================================================
# DATABASE - Qdrant Vector DB
# =============================================================================

QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=novapress_articles

# PostgreSQL (optional - for user data persistence)
DATABASE_URL=postgresql+asyncpg://novapress:password@localhost:5432/novapress_db

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# ML & EMBEDDINGS
# =============================================================================

EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cpu

# =============================================================================
# SECURITY & AUTH
# =============================================================================

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS - Allowed Origins (JSON array format)
# =============================================================================

CORS_ORIGINS=["http://localhost:3000","http://localhost:3002"]

# =============================================================================
# APPLICATION CONFIG
# =============================================================================

DEBUG=False
API_V1_PREFIX=/api

# =============================================================================
# FRONTEND (Next.js)
# =============================================================================

NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_WS_URL=ws://localhost:5000
NEXT_PUBLIC_APP_VERSION=2.0.0

# =============================================================================
# OPTIONAL - Advanced Features
# =============================================================================

# Perplexity API for web search enrichment
# PERPLEXITY_API_KEY=pplx-your-perplexity-key

# xAI Grok for Twitter/X sentiment
# XAI_API_KEY=xai-your-grok-key

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# Domain (for CORS and cookies)
# DOMAIN=novapress.ai

# For Docker Compose production
# NEXT_PUBLIC_API_URL=https://api.novapress.ai
