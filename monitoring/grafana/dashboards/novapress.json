{
  "id": 1,
  "uid": "novapress-main",
  "title": "NovaPress AI v2 - Production Dashboard",
  "description": "Comprehensive monitoring for NovaPress AI news pipeline, API, LLM, and infrastructure.",
  "tags": ["novapress", "production"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "fiscalYearStartMonth": 0,
  "liveNow": true,
  "editable": true,
  "graphTooltip": 1,
  "templating": {
    "list": []
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "Backend Uptime",
      "description": "Whether the NovaPress backend is reachable by Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "expr": "up{job=\"novapress-backend\"}",
          "legendFormat": "Backend",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Total Requests (24h)",
      "description": "Total API requests in the last 24 hours",
      "gridPos": { "h": 4, "w": 5, "x": 4, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          },
          "color": { "mode": "thresholds" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(increase(novapress_api_requests_total[24h]))",
          "legendFormat": "Requests",
          "refId": "A"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Error Rate (5m)",
      "description": "Percentage of 5xx responses over the last 5 minutes",
      "gridPos": { "h": 4, "w": 5, "x": 9, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "orange", "value": 0.03 },
              { "color": "red", "value": 0.05 }
            ]
          },
          "color": { "mode": "thresholds" },
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "sum(rate(novapress_api_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(novapress_api_requests_total[5m]))",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Active WebSockets",
      "description": "Currently active WebSocket connections",
      "gridPos": { "h": 4, "w": 5, "x": 14, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 1 },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          },
          "color": { "mode": "thresholds" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "expr": "novapress_websocket_connections_active",
          "legendFormat": "WebSockets",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Pipeline Status",
      "description": "Current pipeline status: Idle, Running, or Error",
      "gridPos": { "h": 4, "w": 5, "x": 19, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "IDLE", "color": "green" },
                "1": { "text": "RUNNING", "color": "blue" },
                "2": { "text": "ERROR", "color": "red" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "blue", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "expr": "novapress_pipeline_status",
          "legendFormat": "Pipeline",
          "refId": "A"
        }
      ]
    },

    {
      "type": "row",
      "title": "API Performance",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Request Rate (req/s)",
      "description": "API requests per second, broken down by endpoint",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto"
          },
          "color": { "mode": "palette-classic" },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "expr": "sum(rate(novapress_api_requests_total[1m])) by (endpoint)",
          "legendFormat": "{{ endpoint }}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "API Latency (p50, p95, p99)",
      "description": "API request latency percentiles across all endpoints",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto"
          },
          "color": { "mode": "palette-classic" },
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(novapress_api_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(novapress_api_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(novapress_api_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Errors by Endpoint",
      "description": "API error rate broken down by endpoint and error type",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 80,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "normal" },
            "axisPlacement": "auto"
          },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["sum"] }
      },
      "targets": [
        {
          "expr": "sum(increase(novapress_api_errors_total[5m])) by (endpoint, error_type)",
          "legendFormat": "{{ endpoint }} - {{ error_type }}",
          "refId": "A"
        }
      ]
    },

    {
      "type": "row",
      "title": "Pipeline",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "Pipeline Runs (24h)",
      "description": "Total pipeline runs in the last 24 hours by status",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "success" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "failure" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "partial" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "expr": "increase(novapress_pipeline_runs_total[24h])",
          "legendFormat": "{{ status }}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Pipeline Duration",
      "description": "Pipeline execution time per run",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "none",
            "showPoints": "auto",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto"
          },
          "color": { "fixedColor": "purple", "mode": "fixed" },
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(novapress_pipeline_duration_seconds_bucket[1h])) by (le))",
          "legendFormat": "p95 Duration",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(novapress_pipeline_duration_seconds_bucket[1h])) by (le))",
          "legendFormat": "p50 Duration",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Articles Scraped",
      "description": "Articles processed by the pipeline, broken down by source type",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 70,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "normal" },
            "axisPlacement": "auto"
          },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["sum"] }
      },
      "targets": [
        {
          "expr": "increase(novapress_pipeline_articles_processed_total[1h])",
          "legendFormat": "{{ source_type }}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Syntheses Generated",
      "description": "Syntheses generated per category over time",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 70,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "normal" },
            "axisPlacement": "auto"
          },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["sum"] }
      },
      "targets": [
        {
          "expr": "increase(novapress_pipeline_syntheses_generated_total[1h])",
          "legendFormat": "{{ category }}",
          "refId": "A"
        }
      ]
    },

    {
      "type": "row",
      "title": "LLM Performance & Cost",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 21 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "LLM Calls Rate",
      "description": "LLM API calls per minute by model and operation",
      "gridPos": { "h": 7, "w": 6, "x": 0, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto"
          },
          "color": { "mode": "palette-classic" },
          "unit": "cpm"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "sum"] }
      },
      "targets": [
        {
          "expr": "sum(rate(novapress_llm_calls_total[5m])) by (model, operation) * 60",
          "legendFormat": "{{ model }} / {{ operation }}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Token Usage (24h rolling)",
      "description": "Cumulative LLM token usage over the last 24 hours",
      "gridPos": { "h": 7, "w": 6, "x": 6, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto"
          },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "expr": "sum(increase(novapress_llm_tokens_used_total[24h])) by (type)",
          "legendFormat": "{{ type }} tokens",
          "refId": "A"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Estimated Daily LLM Cost",
      "description": "Estimated cost based on token usage (prompt: $0.003/1K, completion: $0.015/1K for GPT-4 class)",
      "gridPos": { "h": 7, "w": 6, "x": 12, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "color": { "mode": "thresholds" },
          "unit": "currencyUSD",
          "min": 0,
          "max": 20
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "(sum(increase(novapress_llm_tokens_used_total{type=\"prompt\"}[24h])) * 0.003 / 1000) + (sum(increase(novapress_llm_tokens_used_total{type=\"completion\"}[24h])) * 0.015 / 1000)",
          "legendFormat": "Estimated Cost",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "LLM Call Latency",
      "description": "LLM call duration percentiles by operation",
      "gridPos": { "h": 7, "w": 6, "x": 18, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto"
          },
          "color": { "mode": "palette-classic" },
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(novapress_llm_call_duration_seconds_bucket[5m])) by (le, operation))",
          "legendFormat": "p50 {{ operation }}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(novapress_llm_call_duration_seconds_bucket[5m])) by (le, operation))",
          "legendFormat": "p95 {{ operation }}",
          "refId": "B"
        }
      ]
    },

    {
      "type": "row",
      "title": "Infrastructure",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 29 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "description": "Host CPU usage percentage",
      "gridPos": { "h": 7, "w": 6, "x": 0, "y": 30 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "none",
            "showPoints": "never",
            "stacking": { "mode": "none" },
            "axisPlacement": "auto",
            "thresholdsStyle": { "mode": "line" }
          },
          "color": { "fixedColor": "blue", "mode": "fixed" },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU %",
          "refId": "A"
        }
