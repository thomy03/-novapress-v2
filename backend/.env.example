# Database
DATABASE_URL=postgresql+asyncpg://novapress:password@localhost:5432/novapress_db
REDIS_URL=redis://localhost:6379/0

# Qdrant Vector DB
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Ollama LLM (local - optional, for testing)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct

# OpenRouter LLM (production) - https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=deepseek/deepseek-v3.2

# Search Enrichment APIs (Optional)
PERPLEXITY_API_KEY=your-perplexity-api-key-here
XAI_API_KEY=your-xai-grok-api-key-here
YOUTUBE_API_KEY=your-youtube-api-key-here

# BGE-M3 Embeddings
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cuda  # or cpu
EMBEDDING_BATCH_SIZE=32

# Scraping
USER_AGENT=NovaPress/2.0 (+https://novapress.ai)
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# RSS Feeds Sources
RSS_FEEDS=https://www.lemonde.fr/rss/une.xml,https://www.lefigaro.fr/rss/figaro_actualites.xml

# API Settings
API_V1_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://localhost:3002
DEBUG=True

# Clustering
MIN_CLUSTER_SIZE=3
MIN_SAMPLES=2
CLUSTER_SELECTION_EPSILON=0.3

# Knowledge Graph
SPACY_MODEL=fr_core_news_lg
MAX_GRAPH_NODES=50
MAX_GRAPH_EDGES=100

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
